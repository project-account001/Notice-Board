<body class="bg-light d-flex flex-column min-vh-100">

    <div class="container text-center mt-5">
        <div class="card shadow-lg p-4 rounded bg-white">
            <h1 class="mb-3">Welcome to the College Notice Board</h1>
            <p class="lead">Select your role to continue:</p>

            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-4 mb-3">
                    <a href="/login/admin" class="btn btn-primary btn-lg w-100">Login as Admin</a>
                </div>
                <div class="col-md-6 col-lg-4 mb-3">
                    <a href="/login/teacher" class="btn btn-success btn-lg w-100">Login as Teacher</a>
                </div>
                <div class="col-md-6 col-lg-4 mb-3">
                    <a href="/login/student" class="btn btn-info btn-lg w-100">Login as Student</a>
                </div>
            </div>

            <div class="mt-4">
                <a href="/signup" class="btn btn-warning btn-lg">Sign-Up a New Admin</a>
            </div>
        </div>
    </div>

    <%- include ('partials/footer') %> <!-- Include footer -->

