<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Notice</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background: linear-gradient(135deg, #f8f9fa, #e2ecf5);
    }

    .edit-card {
      animation: fadeInUp 0.6s ease-out;
      border: none;
      border-radius: 15px;
    }

    .edit-card .card-body {
      padding: 2rem;
    }

    .edit-card h2 {
      color: #0d6efd;
    }

    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(30px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    textarea:focus,
    input:focus {
      box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
      border-color: #0d6efd;
    }

    .navbar-brand {
      font-weight: bold;
      letter-spacing: 1px;
    }

    .form-label {
      font-weight: 600;
    }
  </style>
</head>
<body class="d-flex flex-column min-vh-100">

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand" href="#">
        <img src="https://cdn-icons-png.flaticon.com/512/3135/3135673.png" alt="logo" width="30" height="30" class="d-inline-block align-text-top me-2">
        College Notice Board
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/myNotices">Back to My Notices</a>
          </li>
          <li class="nav-item">
            <a class="nav-link btn btn-danger text-white px-3 ms-lg-2 mt-2 mt-lg-0" href="/logout">Log Out</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Main Content -->
  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-md-8 col-lg-6">
        <div class="card shadow edit-card">
          <div class="card-body">
            <h2 class="text-center mb-4"><i class="bi bi-pencil-square me-2"></i>Edit Your Notice</h2>

            <!-- Edit Notice Form -->
            <form action="/editNotice/<%= notice.id %>" method="POST" enctype="multipart/form-data">
              <div class="mb-3">
                <label for="title" class="form-label">Title:</label>
                <input type="text" id="title" name="title" class="form-control" value="<%= notice.title %>" required>
              </div>
            
              <div class="mb-3">
                <label for="content" class="form-label">Content:</label>
                <textarea id="content" name="content" rows="4" class="form-control" required><%= notice.content %></textarea>
              </div>
            
              <div class="mb-3">
                <label for="file" class="form-label">Replace File (optional):</label>
                <input type="file" id="file" name="file" class="form-control">
                <% if (notice.file_path) { %>
                  <p class="mt-2">Current File:
                    <% if (notice.file_path.endsWith('.pdf')) { %>
                      <a href="<%= notice.file_path %>" target="_blank">View PDF</a>
                    <% } else { %>
                      <img src="<%= notice.file_path %>" alt="Current Image" width="100" class="img-thumbnail">
                    <% } %>
                  </p>
                  
                <% } %>
              </div>
              
            
              <button type="submit" class="btn btn-primary w-100">Update Notice</button>
            </form>
            
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Footer -->
  <footer class="bg-dark text-white text-center py-4 mt-auto shadow-lg">
    <div class="container">
      <p class="mb-1 fw-semibold fs-5">
        &copy; 2025 <span class="text-info">College Notice Board</span>
      </p>
      <p class="mb-0 small text-secondary">
        Keeping students informed and empowered.
      </p>
    </div>
  </footer>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <!-- Bootstrap Icons -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
</body>
</html>
