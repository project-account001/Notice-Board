<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }
        .container {
            max-width: 900px;
        }
        .notice-card {
            background: #fff;
            padding: 15px;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            margin-bottom: 15px;
        }
    </style>
</head>
<body class="d-flex flex-column min-vh-100">

    <%- include("partials/header") %>

    <div class="container mt-4">
        <div class="text-center">
            <h2 class="mb-3">Welcome, <%= user.name %>!</h2>
            <h4 class="text-muted">You have logged in as: <span class="badge bg-primary"><%= user.role %></span></h4>
        </div>

        <div class="mt-4">
            <h2 class="mb-3">All Notices</h2>

            <% if (notices.length === 0) { %>
                <div class="alert alert-info" role="alert">
                    No notices available.
                </div>
            <% } else { %>
                <div class="row">
                    <% notices.forEach(notice => { %>
                        <div class="col-md-6">
                            <div class="notice-card">
                                <h5 class="fw-bold"><%= notice.title %></h5>
                                <p><%= notice.content %></p>
                                <p class="text-muted mb-1">Posted By: <strong><%= notice.teacher_name %></strong></p>
                                <p class="text-muted">Date & Time: <%= new Date(notice.created_at).toLocaleString() %></p>
                            </div>
                        </div>
                    <% }); %>
                </div>
            <% } %>
        </div>

        <div class="text-center mt-4">
            <a href="/logout" class="btn btn-danger">Logout</a>
        </div>
    </div>

    <%- include("partials/footer") %>

</body>
</html>
