<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Add Notice</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
  <style>
    body {
      background: linear-gradient(to bottom right, #f8f9fa, #e2efff);
    }

    .notice-card {
      animation: fadeInUp 0.6s ease;
      border-radius: 15px;
    }

    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(30px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .navbar-brand {
      font-weight: bold;
      letter-spacing: 0.5px;
    }

    .form-label {
      font-weight: 600;
    }

    input:focus,
    textarea:focus {
      border-color: #198754;
      box-shadow: 0 0 0 0.2rem rgba(25, 135, 84, 0.25);
    }

    footer p {
      margin-bottom: 0;
    }
  </style>
</head>
<body class="d-flex flex-column min-vh-100">

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
    <div class="container">
      <a class="navbar-brand" href="#">
        <img src="https://cdn-icons-png.flaticon.com/512/3135/3135673.png" width="30" height="30" class="d-inline-block align-text-top me-2" />
        College Notice Board
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/myNotices">Back to My Notices</a>
          </li>
          <li class="nav-item">
            <a class="nav-link btn btn-danger text-white px-3 ms-lg-2 mt-2 mt-lg-0" href="/logout">Log Out</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Main Content -->
  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-md-8 col-lg-6">
        <div class="card shadow notice-card">
          <div class="card-body">
            <h2 class="text-center mb-4 text-success">
              <i class="bi bi-megaphone-fill me-2"></i>Create a New Notice
            </h2>

            <!-- Notice Form -->
            <form action="/addNotice" method="POST">
              <div class="mb-3">
                <label for="title" class="form-label">Title:</label>
                <input type="text" id="title" name="title" class="form-control" required />
              </div>

              <div class="mb-3">
                <label for="content" class="form-label">Content:</label>
                <textarea id="content" name="content" rows="4" class="form-control" required></textarea>
              </div>

              <button type="submit" class="btn btn-success w-100">Post Notice</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Footer -->
  <footer class="bg-dark text-white text-center py-4 mt-auto shadow-lg">
    <div class="container">
      <p class="fw-semibold fs-5 mb-1">&copy; 2025 <span class="text-success">College Notice Board</span></p>
      <p class="small text-secondary">Empowering announcements, one notice at a time.</p>
    </div>
  </footer>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
